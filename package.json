{
  "name": "agent-skills",
  "version": "1.0.0",
  "description": "Install AI agent skills for any project. Works with Claude Code, Cursor, OpenCode, and other AI agents.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "agent-skills": "./dist/cli.js"
  },
  "files": [
    "dist",
    "skills"
  ],
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts --format esm --dts --clean",
    "watch": "tsup src/cli.ts src/index.ts --format esm --dts --watch",
    "dev": "tsx src/cli.ts",
    "test": "node dist/cli.js list",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "agent",
    "skills",
    "claude",
    "cursor",
    "opencode",
    "antigravity",
    "assistant",
    "llm",
    "best-practices"
  ],
  "author": "Agent Skills Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/agent-skills.git"
  },
  "dependencies": {
    "@clack/prompts": "^0.9.1",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "gray-matter": "^4.0.3",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
